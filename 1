在web-proxy上：
10  yum -y install mariadb mariadb-server mariadb-devel
   11  wget http://ftp.ntu.edu.tw/pub/MySQL/Downloads/MySQL-Proxy/mysql-proxy-0.8.4-linux-el6-x86-64bit.tar.gz
   12  yum -y install wget
   13  wget http://ftp.ntu.edu.tw/pub/MySQL/Downloads/MySQL-Proxy/mysql-proxy-0.8.4-linux-el6-x86-64bit.tar.gz
   14  useradd -r mysql-proxy
   15  ls
   16  tar zxf mysql-proxy-0.8.4-linux-el6-x86-64bit.tar.gz 
   17  ls
   18  mkdir -p /usr/local/mysql-proxy
   19  mv mysql-proxy-0.8.4-linux-el6-x86-64bit/* /usr/local/mysql-proxy/
   20  cd /usr/local/mysql-proxy/
   21  cd share/
   22  cd doc/
   23  ls
   24  cd mysql-proxy/
   25  ls
   26  cd ..
   27  ls
   28  cd bin/
   29  ls
   30  vi /etc/profile
   末尾添加 export PATH=$PATH:/usr/local/mysql-proxy/bin/
   
   31  source /etc/profile
   32  mysql-proxy -v
   33  ps -ef | grep mysql
   34  mysql-proxy -V
   35  mysql-proxy --daemon --log-level=debug --user=mysql-proxy --keepalive --log-file=/var/log/mysql-proxy.log --plugins="proxy" --proxy-backend-addresses="192.168.1.18:3306" --proxy-read-only-backend-addresses="192.168.1.19:3306" --proxy-lua-script="/usr/local/mysql-proxy/share/doc/mysql-proxy/rw-splitting.lua" --plugins=admin --admin-username="admin" --admin-password="admin" --admin-lua-script="/usr/local/mysql-proxy/lib/mysql-proxy/lua/admin.lua" 
   36  ps -ef|grep mysql
   37  mysql -uadmin -padmin -P4041
   38  yum -y install mariadb mariadb-server mariadb-devel 
   39  cd /var/lib/mysql/
